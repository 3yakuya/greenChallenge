<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/background"
    android:background="@drawable/background_main"
    tools:context="greensaver.app.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/electricityImageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_above="@+id/waterImageButton"
        android:layout_marginBottom="80dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waterImageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refuseImageButton"
        android:layout_alignEnd="@+id/waterImageButton"
        android:layout_marginTop="80dp"
        android:layout_alignParentEnd="true"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/waterImageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false" />
</RelativeLayout>