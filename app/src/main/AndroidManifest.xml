<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="greenfo.app">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/green_saver_logo"
        android:label="@string/app_name"
        android:theme="@style/GreenSaverTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowUserActivity"
            android:label="@string/title_activity_show_user"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".AddElectricDeviceActivity"
            android:label="@string/title_activity_add_electric_device"
            android:parentActivityName=".ShowUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ShowUserActivity" />
        </activity>
        <activity
            android:name=".ElectricInfoActivity"
            android:label="@string/title_activity_electric_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".AddWaterActivityActivity"
            android:label="@string/title_activity_add_water"
            android:parentActivityName=".ShowUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ShowUserActivity" />
        </activity>
        <activity
            android:name=".AddRefuseProductionActivity"
            android:label="@string/title_activity_add_refuse_production"
            android:parentActivityName=".ShowUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ShowUserActivity" />
        </activity>
        <activity
            android:name=".WaterInfoActivity"
            android:label="@string/title_activity_water_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".RefuseInfoActivity"
            android:label="@string/title_activity_refuse_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name=".AddElementBasicActivity"
            android:label="@string/title_activity_add_element_basic"
            android:parentActivityName=".ShowUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="greenfo.app.ShowUserActivity" />
        </activity>
    </application>

</manifest>
